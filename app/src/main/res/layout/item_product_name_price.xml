<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/golos_text_medium"
        tools:text="Яблочный сок “Моя семья”, 1л"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#585D68"
        android:textSize="14sp"
        android:id="@+id/product_countPrice"
        android:fontFamily="@font/golos_text_medium"
        tools:text="5.0 х 17 000"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/product_countPrice"
        app:layout_constraintBottom_toBottomOf="@id/product_countPrice"
        app:layout_constraintStart_toEndOf="@id/product_countPrice"
        android:layout_marginHorizontal="10dp"
        android:maxLines="1"
        android:textColor="@color/text_color_"
        android:text="@string/null__"
        app:layout_constraintEnd_toStartOf="@id/product_price"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/product_countPrice"
        app:layout_constraintBottom_toBottomOf="@id/product_countPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="85 000 сум"
        android:textSize="14sp"
        android:fontFamily="@font/golos_text_medium"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>